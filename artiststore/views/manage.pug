extends layout

block content
  .container2
    include sidebar.pug
    .content.manage
      nav.header
        h1.bold.title Manage
      if user
        - console.log(user)
        main
          h5.bold Store Information
          form(autocomplete="off" action="/manage/update" method="POST" enctype="multipart/form-data")
            .input-group
              input(type="text" name="storeName" value=`${user.storeName}` required)
              label(for="storeName") Store Name
              
            .input-group
              textarea.autoExpand(type="text" name="storeBio" data-min-rows="5" rows="5" required)=user.storeBio
              label(for="storeBio") Store Bio

            .input-group
              //- if user.storeImage
              //- img#hero.fluid(src=user.storeImage, alt="Store Profile Image")
              //- else
              input(type="file" name="storeImage")
              label(for="storeImage") Store Image

            button.save.fixed(type="submit") Save

  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
  script(src="/javascripts/edit.js")
  script(src="/javascripts/textarea.js")