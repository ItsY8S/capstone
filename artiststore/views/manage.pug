extends layout

block content
  .container
    .row.pt-25.fixed
      .twelve.columns
        h1.bold.title Manage
    
    .row.pt-125
      .six.columns
        h5.bold Store Information
        form(autocomplete="off" action="/manage/update" method="POST")
        
          .input-group
            input(type="text" name="storeName" value=`${user.storeName}` required)
            label(for="store-name") Store Name
            
          .input-group
            textarea.autoExpand(type="text" name="storeBio" data-min-rows="1" rows="10" required)=user.storeBio
            label(for="store-bio") Store Bio

          button.save(type="submit") Save

  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
  script(src="/javascripts/textarea.js")