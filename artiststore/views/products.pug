extends layout

block content
  .container2
    include sidebar.pug
    .content
      nav.header
        h1.bold.mb-0 Products
        input#search.mb-0(type="search" name="search" placeholder="Search...")

      .grid
        a(href="/products/add")
          .add
            img.fluid(src="/images/add.svg" style="width: 100%" alt="Add Product")
        each product in products
          .item
            a(href=`/products/${product._id}`)
              img.fluid(src=`/uploads/${product.image}` alt=product.title)